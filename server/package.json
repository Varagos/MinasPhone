{
  "name": "minasphone-backend",
  "private": true,
  "version": "0.3.0",
  "description": "MinasPhone Backend",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/src/main",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:prod": "NODE_ENV=production nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand --detectOpenHandles",
    "test:ci": "jest tests/e2e --runInBand --silent",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:unit": "jest ./tests/unit",
    "docker:env": "docker compose --file docker/docker-compose.yml up --build",
    "migration:create": "ts-node database/migrate create --name",
    "migration:up": "ts-node database/migrate up",
    "migration:up:tests": "NODE_ENV=test ts-node database/migrate up",
    "migration:down": "ts-node database/migrate down",
    "migration:down:tests": "NODE_ENV=test ts-node database/migrate down",
    "migration:executed": "ts-node database/migrate executed",
    "migration:executed:tests": "NODE_ENV=test ts-node database/migrate executed",
    "migration:pending": "ts-node database/migrate pending",
    "migration:pending:tests": "NODE_ENV=test ts-node database/migrate pending",
    "seed:up": "ts-node database/seed",
    "open-api-types": "npx swagger-typescript-api generate --path ./swagger.json --output ../client/src/api/server --name api.ts --rewrite --useOptions --useUnionTypes --defaultResponseType never"
  },
  "dependencies": {
    "@google-cloud/storage": "^6.10.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "^10.0.3",
    "@nestjs/event-emitter": "^2",
    "@nestjs/mapped-types": "^2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7",
    "@slonik/migrator": "^0.11.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.0.3",
    "env-var": "^7.3.0",
    "helmet": "^7.1.0",
    "nanoid": "^3",
    "nest-winston": "^1.9.4",
    "nestjs-request-context": "^3.0.0",
    "nestjs-slonik": "^10",
    "oxide.ts": "^1.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "slonik": "^31",
    "supertokens-node": "^13",
    "winston": "^3.11.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.5.1",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^10",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.2",
    "jest-cucumber": "^3.0.1",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "swagger-typescript-api": "^13.2.0",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.8"
  }
}
